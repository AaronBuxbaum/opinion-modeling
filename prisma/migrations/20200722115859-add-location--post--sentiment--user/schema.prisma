datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Location {
  id        Int    @default(autoincrement()) @id
  latitude  Float
  longitude Float
  User      User[]
}

model Post {
  id        Int       @default(autoincrement()) @id
  createdAt DateTime  @default(now())
  url       String
  sentiment Sentiment @relation(fields: [id], references: [id])
  User      User      @relation(fields: [userId], references: [id])
  userId    Int
}

model Sentiment {
  id       Int      @default(autoincrement()) @id
  positive Boolean?
  negative Boolean?
  Post     Post[]
}

model User {
  id        Int      @default(autoincrement()) @id
  email     String   @unique
  age       Int?
  createdAt DateTime @default(now())
  posts     Post[]
  location  Location @relation(fields: [id], references: [id])
}
